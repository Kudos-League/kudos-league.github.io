{
    // Formatters
    "editor.defaultFormatter": "dbaeumer.vscode-eslint", // optional, or use dbaeumer.vscode-eslint
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.codeActionsOnSave": {
        "source.fixAll": true, // enables all fixers, not just ESLint
        "source.fixAll.eslint": true // specifically ESLint
    },

    // ESLint support for various file types
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "json",
        "jsonc",
        "svelte" // add this if using svelte-eslint
    ],

    // Optional: Prettier-Eslint Integration
    "vs-code-prettier-eslint.prettierLast": true,

    // Optional: Auto-save behavior
    "files.autoSave": "onFocusChange",
    "files.eol": "\n"
}
