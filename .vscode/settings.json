{
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit",
		"source.fixAll.eslint": "explicit"
	},
	"eslint.validate": [
		"javascript",
		"typescript",
		"typescriptreact",
		"javascriptreact",
		"react"
	],
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true
	},
	"tailwindCSS.classAttributes": ["class", "className", "theme"],
	"tailwindCSS.experimental.classRegex": [
		["twMerge\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
		["createTheme\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
	],
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.tabSize": 4,
	"eslint.runtime": "node",
	"files.exclude": {
		"**/.cache": true,
		"**/.DS_Store": true,
		"**/.editorconfig": true,
		"**/.eslintcache": true,
		"**/.git": true,
		"**/.gitattributes": true,
		"**/.husky": true,
		"**/.pnp.*": true,
		"**/.prettierignore": true,
		"**/node_modules": true,
		"**/yarn.lock": true,
		"**/dist": true,
		"*.gitignore": true
	},
	"search.exclude": {
		"**/dist/": true,
		"**/node_modules/": true,
		"**/build/": true,
		"**/coverage/": true,
		"**/.git/": true,
		"**/.DS_Store": true,
		"**/.cache": true,
		"**/.pnp.*": true,
		"**/.yarn": true,
		"**/yarn-error.log": true,
		"**/yarn.lock": true
	},
	"cSpell.words": [
		"antd",
		"hoverable",
		"nodenext",
		"Parens",
		"Popconfirm",
		"Sider"
	]
}
